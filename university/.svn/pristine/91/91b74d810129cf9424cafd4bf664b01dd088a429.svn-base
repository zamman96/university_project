@charset "UTF-8";

.section-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* section-top 시작 */
.section-top {
    font-size: var(--font-size-4xl);
    font-weight: bold;
}

/* section-center 시작 */
.title{
	margin-left : 5%;
	font-size: 2.1rem;
}
.section-center {
	gap: var(--pd-box);
}
.section-center {	
	background-color: white;
	border: 1px solid var(--gray-line-box);
	padding: 30px 0;
	border-radius: var(--br-xl);
	min-width: 900px;
	overflow: auto;
}
.section-title {
	display: flex;
	justify-content: space-between;
    align-items: center;
}
.section-list {
	padding: 0 20px;
}
.section-select {
    width: 100%;
	padding: 5px 10px;
    background: #f8f8f8;
}
.section-select-btn {
    padding: 10px 20px;
    margin: 10px 5px;
    border-radius: 4px;
}
.section-select.plus {
	padding: 20px;
}
#mul-stu {
	background: white;
    padding: 20px 20px;
    border-radius: 10px;
}

/*아코디언*/
.accordion-button {
   padding: 20px 0 !important;
}
.accordion-body {
	padding: 0 !important;
}
.tabletitle{
	width: 200px;	
}
.accordion-button:not(.collapsed) {
    border-top: 1px solid var(--bs-accordion-active-color);
}
.accordion-button:focus {
	box-shadow: none !important;
}

/* 메뉴 인덱스 */
.modal-header h2{
	display: inline-block;
	width: 50%;
}
.pen{
	width: 20px;
	height: 20px;
	margin-left: 10%;
	margin-right: 4%;
}
.section-menu{
	justify-content : space-between;
	display: flex;
	background: none;
	padding-left: 10px;
	padding-right: 10px;
}

/* 추가 화면 구성 */
.list-item {
	width: 100%;
}
.item-title {
	font-size: 18px;
	font-weight: bold;
	padding: 10px 0;
	border-bottom: 1px solid var(--gray-line-dark);
}
.item {
    display: flex;
    flex-direction: column;
    gap: 10px;
}
.item-content {
	display: flex;
	gap: 20px;
    flex-wrap: wrap;
    padding: 20px 10px;
}
.item input, .item select {
	border-radius: 10px;
	height: 40px;
    border: 1px solid var(--gray-bg-5);
    padding: var(--pd-select-y) var(--pd-select-x);
    background: white;
}
#single_id, #single_pw {
	background: var(--bg-0);
}
/* section-bottom */
.section-bottom {
    width: 100%;
    text-align: center;
    margin-top: 20px;
    margin: 40px 0;
}
.save-btn {
    border: none;
    background-color: var(--primary-p-50);
    color: white;
    font-size: var(--font-size-lg);
    font-weight: bold;
    padding: 15px 30px;
    border-radius: 4px;
}
.save-btn:hover {
	background-color: var(--primary-p-60);
}


/*모달*/
dialog{
	z-index: 1000; /* 다른 모달창의 z-index */
	padding: 0;
	border: none;
	border-radius: 6px;
	animation: appear .8s cubic-bezier(.77,0,.175,1) forwards;
	box-shadow: 0 25px 40px -20px #3c4a56;
	width: 900px;
	position: fixed;
}
.dialog__animate-out{
  animation: dissappear .8s cubic-bezier(.77,0,.175,1) forwards;
}
.dialog__inner {
  display: flex;
  flex-direction: column;
  color: #838282;
  background-color: var(--bg-1);
  gap: 10px;
}
.dialog__inner__top {
    font-size: var(--font-size-2xl);
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--primary-p-80);
    padding: 10px 20px;
    color: white;
    position: fixed;
    width: 900px;
}
.dialog__content {
	padding: 0 $default--padding $default--padding $default--padding;
}
.modal-wrap {
    justify-content: space-between;
    gap: 20px;
    padding: 20px 30px;
    margin-top: 70px;
    display: flex;
    flex-direction: column;
}
.modal-wrap-title {
	font-size: 20px;
	color: var(--gray-text-title);
	font-weight: bold;
}
.button {
  border: none;
  background-color: #afb8c9;
  padding: 17px $default--padding 17px $default--padding;
  border-radius: 30px;
  font-size: 15px;
  font-family: 'Nunito', sans-serif;
  color: #fff;
  box-shadow: 0 10px 25px #3c4a5645;
  outline: none;
  cursor: pointer;
}
.button-close {
  padding: 10px;
  align-self: flex-end; 
  background-color: transparent;
  box-shadow: none;
  color: #838282;
}
.sel2-boxs {
	padding: 20px 40px;
	background-color: white;
	border-radius: var(--br-xl);
	text-align: left;
	display: flex;
	justify-content: space-between;
}
.sel2-box-title {
	color: var(--gray-text-title);
	font-weight: bold;
	margin-bottom: 5px;
}
.sel-boxs {
	padding: 20px 40px;
	background-color: white;
	border-radius: var(--br-xl);
}
input[type="file"] {
    display: none;
}
.file-btn {
    color: var(--gray-text-body);
    border: 1px solid var(--gray-text-body);
    padding: 8px 8px 8px 31px;
    vertical-align: middle;
    background-color: white;
    font-size: 16px;
    background-image: url(http://localhost/svnTest/board/board-1/img/file.png);
    background-repeat: no-repeat;
    background-position: 9px 7px;
}
.file-btn:hover {
	background-color: var(--primary-p-5);
}
#filename {
	margin-left: 10px;
	color: var(--gray-text-title);
}
#filereset {
	display: none;
    color: var(--gray-text-body);
    cursor: pointer;
    margin-left: 4px;
}
#filereset:hover {
	color: var(--gray-text-disabled);
}

.modal-bottom {
	width: 100%;
	text-align: center;
	padding: 10px 30px 40px 0;
}

/* 학생 다량 파일첨부 시 테이블 */
 #mul-stu-list {
   max-height: 492px;
   overflow: auto;
}
.table-wrap {
	width: 100%; 
    border-bottom: 1px solid #8e8e8e;
}
.table-wrap::-webkit-scrollbar {
	height: 20px;	
}
.table-wrap::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 5px solid transparent;
}
.table-wrap::-webkit-scrollbar-track {
	background-color: transparent;
}
.table-wrap table {
	white-space: nowrap;
	width: 100%;
}
.table-wrap th, td {
	height: 50px;
	padding: 10px;
}
.table-wrap th {
	background: var(--primary-p-5);
	text-align: center;
}
.table-wrap td {
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}
.buildingSelect, .roomnumSelect{
	text-align: center;
}
.table-wrap th {
    position: sticky;
    top: -2px;
    z-index: 1;
}
#mul-stu-list input {
	width: 150px;
}
#mul-stu-list select {
    height: 42px;
    padding: 0 10px;
    border: 1px solid var(--gray-bg-5);
    border-radius: var(--br-sel);
}
#mul-stu-list #id,
#mul-stu-list #pw {
	width: 140px;
}
#mul-stu-list #add {
	width: 300px;
}
#mul-stu-list #name {
	width: 100px;
}
/* 스크롤 */
#mul-stu-list::-webkit-scrollbar {
	height: 20px;
	width: 20px;
}
#mul-stu-list::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 5px solid transparent;
}
#mul-stu-list::-webkit-scrollbar-track {
    background-color: #f8f8f8;
}


@keyframes appear {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes dissappear {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(20px);
  }
}

