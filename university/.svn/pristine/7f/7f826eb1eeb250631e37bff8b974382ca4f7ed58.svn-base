@charset "UTF-8";

.section-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* section-top 시작 */
.section-top {
	display: flex;
	justify-content: space-between;
    align-items: center;
}
.section-top-left {
	font-size: var(--font-size-4xl);
	font-weight: bold;
}
.section-top-right {
	display: flex;
	gap: 10px;
}
.section-top-right .btn {
	display: flex;
	flex-direction: column;
	gap: 4px;
	align-content: center;
	background-color: white;
	border: 1px solid var(--gray-line-box);
	font-size: var(--font-size-sm);
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    cursor: pointer;
    width: 60px;
    height: 60px;
}
.section-top-right .btn:hover {
    background-color: var(--primary-p-5);
}
.section-top-right .btn img {
	width: 20px;
	height: 20px;
}

/* section-center 시작 */
.section-center {
	background-color: white;
	border: 1px solid var(--gray-line-box);
	padding: 30px 30px;
	border-radius: var(--br-xl);
	min-width: 900px;
}

/* list-top 시작 */
.list-top {
	display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 0 10px 0;
    width: 100%;
}
.list-top-right {
	display: flex;
    gap: var(--gap-base);
    align-items: center;
}
.icon-20 {
	width: 20px;
	height: 20px;
}
.table-search {
	display: flex;
  	gap: var(--gap-3xs);
	font-size: var(--font-size-base);
  	color: var(--gray-text-body);
}
.search-select {
	width: 160px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border: 1px solid var(--gray-bg-5);
	border-radius: var(--br-sel);
	padding: var(--pd-select-y) var(--pd-select-x);
	appearance: none;
	background: url(<%=request.getContextPath() %>/board/student-list/img/vuesaxoutlinearrowdown.svg) no-repeat 90% 50%;
	font-size: 16px;
}
.search-box {
	width: 300px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border: 1px solid var(--gray-bg-5);
	border-radius: var(--br-sel);
	padding: var(--pd-select-y) var(--pd-select-x);
	cursor: pointer;
}
.search-input {
	border: none;
	outline: none;
	width: -webkit-fill-available;
	font-size: 16px;
}
.search-btn {
	cursor: pointer;
}
.search-btn:hover {
	filter: var(--filter-p-50);
}	
	
/* list-container 시작 */
.list-container {
	border-top: 1px solid var(--gray-line-dark);
	border-bottom: 1px solid var(--gray-line-dark);
}
.list-box {
	display: flex; 
	padding: 20px 20px;
	align-items: center;
	border-bottom: 1px solid var(--gray-line-box);
	gap: 20px;
	color: var(--gray-text-disabled); 
}
.list-department {
	font-weight: bold;
	color: var(--primary-p-90);
	width: 300px;
    min-width: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
}
.list-data {
	width: 200px;
	min-width: 105px;
	display: flex;
	flex-direction: column;
	gap: 5px;
}
.list-data img {
	margin-right: 4px;
}
.list-num {
    width: 55px;
    min-width: 55px;
} 
.list-btn {
	width: 200px;
	min-width: 102px;
    text-align: center;
}
.list-btn a {
	color: var(--primary-p-90);
	border: 1px solid var(--gray-line-dark);
	padding: 10px;
    border-radius: 4px;
    vertical-align: middle;
}
.list-btn a:hover {
	background-color: var(--primary-p-5);
}
.list-btn img {
	width: 16px;
	color: var(--primary-p-90);
}
.list-subject {
    display: block;
    overflow: hidden;
	width: -webkit-fill-available;
    white-space: nowrap;
}
.list-subject-title,
.list-subject-sub {
	overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}
.list-subject-title {
	padding-bottom: 5px;
}
.list-subject-title a {
	font-size: var(--font-size-lg);
	color: var(--primary-p-90);
}
.list-subject-title a:hover {
	text-decoration: underline;
}	

/* 페이지네이션 시작 */
.pagination-wrap {
	text-align: center;
    padding: 20px 0;
}

.pagination {
  display: inline-block;
}

.pagination a {
  color: black;
  float: left;
  padding: 8px 16px;
  text-decoration: none;
  transition: background-color .3s;
  border: 1px solid #ddd;
  border-radius: var(--br-2xs);
  margin: 0 4px;
}

.pagination a.active {
  background-color: var(--primary-p-40);
  color: white;
}

.pagination a:hover:not(.active) {background-color: var(--primary-p-5);}

	
	
	
	
	
