}
.section-menu{
	justify-content : space-between;
	display: flex;
	background: none;
	padding-left: 10px;
	padding-right: 10px;
}
h3{
	margin : 0px;
}

/* 테이블 시작 */
.table-wrap {
	width: 100%; 
	overflow: auto;
    border-bottom: 1px solid #8e8e8e;
}
.table-wrap::-webkit-scrollbar {
	height: 20px;	
}
.table-wrap::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 5px solid transparent;
}
.table-wrap::-webkit-scrollbar-track {
	background-color: transparent;
}
.table-wrap table {
	white-space: nowrap;
	width: 100%;
}
.table-wrap th, td {
	height: 50px;
	padding: 0 var(--pd-table);
}
.table-wrap th {
	border-top: 1px solid var(--table-th);
	background: var(--primary-p-5);
	text-align: center;
}
.table-wrap td {
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}
.buildingSelect, .roomnumSelect{
	text-align: center;
}
thead tr {
            position: sticky;
            top: 0;
            background-color: #f9f9f9;
            z-index: 1; /* Make sure the header stays on top */
}
.table-wrap {
    overflow-x: auto; /* 테이블이 너무 넓을 경우 수평 스크롤을 추가합니다. */
}

.table-wrap table {
    width: 100%; /* 테이블의 너비를 부모 요소에 맞춥니다. */
    table-layout: fixed; /* 고정된 테이블 레이아웃을 사용합니다. */
}

.table-wrap th, .table-wrap td {
    word-wrap: break-word; /* 긴 단어를 줄바꿈합니다. */
    word-break: break-all; /* 긴 단어를 줄바꿈합니다. */
    white-space: normal; /* 공백 처리를 기본값으로 설정하여 줄바꿈이 가능하게 합니다. */
}




