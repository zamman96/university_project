@charset "UTF-8";

.section-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* section-top 시작 */
.section-top {
    font-size: var(--font-size-4xl);
    font-weight: bold;
}

/* section-center 시작 */
.section-center {	
    background-color: white;
    border: 1px solid var(--gray-line-box);
    padding: 30px 30px;
    border-radius: var(--br-xl);
    min-width: 900px;
    overflow: auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
}

/* 테이블 시작 */
.table-wrap {
	width: 100%; 
}
.table-wrap table {
	white-space: nowrap;
	width: 100%;
}
.table-wrap th, td {
	height: 50px;
	padding: 0 var(--pd-table);
}
.table-wrap th {
	background: var(--primary-p-5);
	text-align: center;
}
.table-wrap td {
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}

/* 스크롤 */
.stu-list::-webkit-scrollbar {
	height: 20px;
	width: 20px;
}
.stu-list::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 3px solid transparent;
}
.stu-list::-webkit-scrollbar-track {
    /* background-color: #fcfdff; */
     background-color: #fcfeff;
}

#subjectList {
	border-top: 1px solid var(--gray-line-dark);
}
.stu-list {
	max-height: 671px;
    overflow: scroll;
}
.stu-list table thead tr {
	position: sticky;
	top: -1px;
	background-color: #f9f9f9;
	z-index: 1; /* Make sure the header stays on top */
}

/* 버튼 */
.btns {
	display: flex;
    gap: 10px;
}
.btns input {
	background: white;
	border-radius: 4px;
}
.btns input:hover {
	background: var(--bg-0);
}








