@charset "UTF-8";

.section-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* section-top 시작 */
.section-top {
    font-size: var(--font-size-4xl);
    font-weight: bold;
}
.section-top {
    font-size: var(--font-size-4xl);
    font-weight: bold;
}
/* section-center 시작 */
.section-center {
	gap: var(--pd-box);
}
.section-center {	
    background-color: white;
    border: 1px solid var(--gray-line-box);
    padding: 30px 20px;
    border-radius: var(--br-xl);
    min-width: 900px;
    overflow: auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
    min-height: 830px;
}

/* 리스트 시작 */
.list-title {
    font-size: var(--font-size-2xl);
    font-weight: bold;
    margin-bottom: 10px;
    display: flex;
    gap: 10px;
}
.list-title.top {
	display: flex;
    align-items: center;
    gap: 10px;
}
#rmenu {
	padding: 4px 8px;
    background: #f58d39;
    font-weight: bold;
    color: white;
    border: none;
}
.list-title.bottom {
	display: flex;
	width: 100%;
    align-items: center;
    gap: 15px;
}
.number {
	font-size: 18px;
	font-weight: 400;
}
#credit {
	padding: 4px 8px;
    background: #f58d39;
    font-weight: bold;
    color: white;
    border: none;
    font-size: 16px;
    border-radius: 4px;
    width: 80px;
    
}

/* 개강 강의 리스트 검색 영역 시작 */
.select-boxs {
    display: flex;
    align-items: flex-end;
    margin-bottom: 8px;
    justify-content: space-between;
}
.sel-box {
	padding: 5px 5px;
}
.sel-box select {
	border: none;
	outline: none;
}
.search-box {
	display: flex;
    padding: 8px 15px;
    border-radius: 100px;
    border: 1px solid var(--gray-line-box);
}
.search-input {
	border: none;
	outline: none;
	font-size: 16px;
	padding: 0;
}
.search-btn {
	cursor: pointer;
}
.search-btn:hover {
	filter: var(--filter-p-50);
}

/* 테이블 시작 */
.table-wrap {
	width: 100%; 
	overflow: auto;
    text-align: center;
}
.table-wrap table {
	white-space: nowrap;
	width: 100%;
}
.table-wrap th, td {
	height: 50px;
	padding: 0 var(--pd-table);
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}
.table-wrap th {
	background: var(--primary-p-5);
	text-align: center;
}
.table-wrap td {
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}
.textarea {
    height: 80%;
    width: 100%;
    padding: 5px;
}
thead tr {
	position: sticky;
	top: -1px;
	background-color: #f9f9f9;
	z-index: 1; /* Make sure the header stays on top */
}
#lectureList, #courseList{
    max-height: 321px;
	overflow: auto;    
	border-top: 1px solid var(--gray-line-dark);
}
.deleteCourse, .insertCourse, .disableCourse {
	padding: 8px 16px;
    background-color: white;
    border: none;
}
.deleteCourse:hover, .insertCourse:hover {
    background-color: #fff6da;
    border: none;
    border-radius: 100px;
    font-weight: 600;
}
.disableCourse:hover {
	cursor: no-drop;
}

.pagination {
    --bs-pagination-padding-x: 0.75rem;
    --bs-pagination-padding-y: 0.375rem;
    --bs-pagination-font-size: 1rem;
    --bs-pagination-color: var(--bs-link-color);
    --bs-pagination-bg: #fff;
    --bs-pagination-border-width: 1px;
    --bs-pagination-border-color: #dee2e6;
    --bs-pagination-border-radius: 0.375rem;
    --bs-pagination-hover-color: var(--bs-link-hover-color);
    --bs-pagination-hover-bg: #e9ecef;
    --bs-pagination-hover-border-color: #dee2e6;
    --bs-pagination-focus-color: var(--bs-link-hover-color);
    --bs-pagination-focus-bg: #e9ecef;
    --bs-pagination-focus-box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    --bs-pagination-active-color: #fff;
    --bs-pagination-active-bg: #0d6efd;
    --bs-pagination-active-border-color: #0d6efd;
    --bs-pagination-disabled-color: #6c757d;
    --bs-pagination-disabled-bg: #fff;
    --bs-pagination-disabled-border-color: #dee2e6;
    display: flex;
    padding-left: 0;
    list-style: none;
    justify-content: center;
    
}

.pagination a.active {
    background-color: var(--primary-p-40);
    color: white;
}

.pagination a {
    color: black;
    float: left;
    padding: 8px 16px;
    text-decoration: none;
    transition: background-color .3s;
    border: 1px solid #ddd;
    border-radius: var(--br-2xs);
    margin: 0 4px;
}


/* 스크롤 */
#lectureList::-webkit-scrollbar,
#courseList::-webkit-scrollbar {
	height: 20px;
	width: 20px;
}
#lectureList::-webkit-scrollbar-thumb,
#courseList::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 8px solid transparent;
}
#lectureList::-webkit-scrollbar-track,
#courseList::-webkit-scrollbar-track {
    background-color: #fcfdff;
    /* background-color: #fcfeff; */
}
/*모달*/
.modal-header{
	background: var(--primary-p-80);
}
.modal-title{
	font-size: var(--font-size-2xl);
	font-weight: bold;
	color: white;
}
.modal-body{
  width:100%;
  align-items: center;
  justify-content: center;
  font-family: 'Nunito', sans-serif;
  
}
.btn-close{
    padding: 10px;
    align-self: flex-end;
    background-color: transparent;
    box-shadow: none;
    color: #838282;
}
.mdbtn{
	background-color: var(--primary-p-50);
	color: white;
	font-weight: bold;
	border-radius: var(--br-2xs);
}
.mbtext{
	font-size:16px;
	color: #555;
}
.sel2-boxs {
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 20px;
}