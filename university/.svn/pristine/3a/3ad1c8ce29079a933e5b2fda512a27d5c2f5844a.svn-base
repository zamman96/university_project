}

.section-select{
	display: flex;
}
.section-select button{
	margin: 10px;
	width: 80px;
	height: 30px;
	font-size: 1.1rem;
}
.section-left{
	display: flex;
	justify-content:flex-end;
	align-items: center;
}

/* 메뉴 인덱스 */
.modal-header h2{
	display: inline-block;
	width: 50%;
}
