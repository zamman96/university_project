@charset "UTF-8";

body {
	background-color: var(--bg-0);
}

#container {
	display: flex;
	padding: 50px 30px;
	height: 1080px;
    align-items: center;
}

/* left 시작 */
.left {
	background-color: white;
    width: 14%;
    min-width: 260px;
    padding: 65px 90px;
    display: flex;
    flex-direction: column;
    gap: 70px;
    color: var(--gray-text-disabled);
    height: 95%;
    border-radius: 15px 0 0 15px;
    align-items: center;
}
.logo {
	width: 72px;
}
.left div {
	display: flex;
	flex-direction: column;
	gap: 10px;
	align-items: center;
	cursor: pointer;
}
.left div img {
	width: 30px;
	heigth: 30px;
}
.left img{
	cursor: pointer;
}

/* center 시작 */
.center {
	width: 50%;
	min-width: 640px;
    height: 100%;
    border-radius: 5px;
    background-repeat: no-repeat;
	background-image: url(http://localhost/svnTest/login/img/bg.png);
	background-size: cover;
	padding: 160px 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.notice-title {
	font-size: 50px;
	font-weight: 100;
	color: white;
	border-bottom: 1px solid var(--bg-0);
    padding-bottom: 15px;
    margin-bottom: 50px;
    width: 100%;
}
.notice-items {
	display: flex;
	flex-direction: column;
	gap: 30px;
}
.notice-item {
	width: 100%;
	display: flex;
	flex-direction: column;
	gap: 10px;
	color: white;
}
.notice-item a {
	color: white;
}
.notice-item a:hover {
	text-decoration: underline;
}
.notice-item span {
	color: #BBBBBB;
}
.notice-bage {
    border-bottom: 1px solid var(--bg-0);
    padding-bottom: 10px;
    width: fit-content;
}

/* right */
.right {
	height: 95%;
	width: 39%;
	min-width: 430px;
	background-color: white;
	border-radius: 0 20px 20px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 50px;
}
#login-input {
	display: flex;
	flex-direction: column;
    gap: 30px;
}
#login-input input {
    width: 400px;
    height: 70px;
    padding: 0 20px;
    font-size: 18px;
    border-radius: 5px;
    border: 1px solid #eee;
    box-shadow: 0px 5px 10px #eee;
}
.login-title {
	font-size: 60px;
	font-weight: bold;
}
.login-find {
	display: flex;
	gap: 30px;
	color: var(--gray-text-disabled);
}
.link {
	color: var(--primary-p-90);
	font-weight: bold;
}
.link:hover {
	text-decoration: underline !important;
}
.login-btn {
	background-color: var(--primary-p-60);
	width: 80px;
	height: 80px;
	border-radius: 100%;
	line-height: 80px;
    text-align: center;
    cursor: pointer;
}
.login-btn:hover {
	background-color: var(--primary-p-70);
}
















    
    
    
    
    
    
