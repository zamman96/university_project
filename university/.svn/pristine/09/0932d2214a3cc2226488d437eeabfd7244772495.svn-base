@charset "UTF-8";

.section-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

/* section-top 시작 */
.section-top {
	display: flex;
	justify-content: space-between;
}
.section-top-left {
	display: flex;
	gap: 15px;
}
.user-info {
	display: flex;
	flex-direction: column;
	gap: 4px;
}
.user-name {
	font-size: var(--font-size-2xl);
}
.user-belong {
	display: flex;
	gap: 10px;
}
.section-top-right {
	display: flex;
	gap: 10px;
}
.section-top-right .btn {
	display: flex;
	flex-direction: column;
	gap: 4px;
	align-content: center;
	background-color: white;
	border: 1px solid var(--gray-line-box);
	font-size: var(--font-size-sm);
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    cursor: pointer;
}
.section-top-right .btn:hover {
    background-color: var(--primary-p-5);
}
.section-top-right .btn img {
	width: 20px;
	height: 20px;
}

/* section-center 시작 */
.section-center {
/* 	display: flex; */
	gap: var(--pd-box);
/* 	justify-content: space-between; */
}
.section-center {	
	background-color: white;
	border: 1px solid var(--gray-line-box);
	padding: 30px 0;
	border-radius: var(--br-xl);
	min-width: 900px;
	overflow: auto;
}
.section-title {
	display: flex;
	justify-content: space-between;
    align-items: center;
}
.plus-section {
	margin-right: 20px;
	color: var(--gray-text-disabled);
}
.plus-section:hover a {
	color: var(--primary-p-50);
}
.plus-section img{
	vertical-align: text-top;
}
.plus-section:hover img{
	filter: var(--filter-p-50);
}
.icon-section {
	display: flex;
	font-size: var(--font-size-4xl);
	font-weight: bold;
	align-items: center;
}


/* 게시판 시작 */
.section-center-right {
	display: flex;
	flex-direction: column;
	gap: var(--pd-box);
	width: 40%;
}
.section-center-right .board {
	/* width: 600px;
	min-width: 400px; */
}
.content-items {
	padding: 30px 30px 0 30px;
	display: flex;
	flex-direction: column;
	gap: 12px;
}
.content-item {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    align-items: center;
}
.content-item img {
	margin-right: 4px;
}
.content-item .link {
	min-width: 100px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.content-item .link a {
	color: var(--gray-text-body);
}
.content-item .link a:hover {
	text-decoration: underline;
}
.content-item .data {
	min-width: 110px
}

.section-center img{
	filter: invert(75%) brightness(50%);
	text-align: center;
	margin-left: 20px;
	margin-right: 10px;
}
.titleimg {
	width: 40px;
	height: 36px;
	line-height: 46px;
}
.section-term, .section-menu, .section{
	width: 80%;
	margin-left:70px;
	border-radius: var(--br-2xs);
	padding: 10px;
}
.section-term input{
	width: 100px;
}
.section-term table{
	width: 100%;
}
.section-term td{
/* 	width: 25%; */
}


/* 메뉴 인덱스 */
.modal-header h2{
	display: inline-block;
	width: 50%;
}
.pen{
	width: 20px;
	height: 20px;
	margin-left: 10%;
	margin-right: 4%;
}
.section-menu{
	justify-content : space-between;
	display: flex;
	background: none;
	padding-left: 10px;
	padding-right: 10px;
}
h3{
	margin : 0px;
}



/* 검색 모달  */
.section-search, .section-subject{
	width: 90%;
}
.section-search table{
	width: 100%;
	height: 25px;
}
label{
	font-size: var(--font-size-sm);
	vertical-align: center;
	padding-top: 3px;
}
.section-right{
	text-align: right;
}
.section-left, .section-right {
	width: 500px;
}
.section-right{
	
}
.section-subject, .section-subject-modal{
	background: none;
	width: 80%;
}
.section table{
	width: 100%;
}
.section td{
	height: 25px;
}
.search{
	filter:none;
	width: 50px;
	height: 50px;
}






/*선택 */
.modal-content{
	height: 700px;
	margin: 3% auto;
	overflow: auto;
}
.select table{
	width: 90%;
	margin: 5px auto;
}
.select h2{
	margin-left: 5%;
}
#info{
	margin-right: 5%
}
.select-result:hover{
	font-weight: bold;
	color: white;
	background : var(--primary-p-50);
}
.result{
	margin: 2px auto;
}
.result table{
	width: 90%;
}


/* 테이블 시작 */
.table-wrap {
	width: 100%; 
	overflow: auto;
    border-bottom: 1px solid #8e8e8e;
}
.table-wrap::-webkit-scrollbar {
	height: 20px;	
}
.table-wrap::-webkit-scrollbar-thumb {
	background-color: var(--gray-bg-5);
	border-radius: 100px;
    background-clip: padding-box;
    border: 5px solid transparent;
}
.table-wrap::-webkit-scrollbar-track {
	background-color: transparent;
}
.table-wrap table {
	white-space: nowrap;
	width: 100%;
}
.table-wrap th, td {
	height: 50px;
	padding: 0 var(--pd-table);
}
.table-wrap th {
	border-top: 1px solid var(--table-th);
	background: var(--primary-p-5);
	text-align: center;
}
.table-wrap td {
	border-top: 1px solid var(--table-td);
	border-bottom: 1px solid var(--table-td);
}
.buildingSelect, .roomnumSelect{
	text-align: center;
}
thead tr {
            position: sticky;
            top: 0;
            background-color: #f9f9f9;
            z-index: 1; /* Make sure the header stays on top */
}


#search2{
	text-align: right;
}
#index{
	margin: 0px auto;
}
#index button{
	width: 120px;
	margin-right: 5px;
	height: 40px; 
}
.section-list{
	width: 90%;
	margin: 1px auto;
}
.titletable{
	width: 30%;
}
.section-list table{
	width: 100%;
}
#bar{
	width: 90%;
	height : 1px;
	background : var(--gray-bg-5);
	margin: 1px auto;
}
.section-search{
	width: 100%;
}
#lectureList, #courseList{
	min-height: 300px;
	max-height: 300px;
	overflow: auto;
}

/* radio 버튼 효과 */
.radioCkbox{
	text-align: center;
}
input.radioCk{
	 padding : 0 !important;
}
[type="radio"] {
  vertical-align: middle;
  appearance: none;
}
[type="radio"] {
  vertical-align: middle;
  appearance: none;
  border: max(2px, 0.1em) solid gray;
  border-radius: 50%;
  width: 1.25em;
  height: 1.25em;
}
[type="radio"]:checked {
  border: 0.4em solid var(--primary-p-50);
}
[type="radio"]:hover {
  box-shadow: 0 0 0 max(4px, 0.2em) lightgray;
  cursor: pointer;
}
[type="radio"]:focus-visible {
  outline: max(2px, 0.1em) dotted tomato;
  outline-offset: max(2px, 0.1em);
}

/* 버튼 효과 */
#attendBtn, #absentBtn, #tardyBtn{
	font-size: 1.2rem;
	font-weight: bold;
	width: 60px;
	height: 30px;
}
#attendBtn:active, #absentBtn:active, #tardyBtn:active{
	background: var(--primary-p-50);
	color: white;
}

/* 과목정보 테이블 */
#subjectInfo th{
	width: 25%;
}
#subjectInfo{
	text-align: center;
}
#today{
	width: 500px;
}


.title{
	margin-left : 5%;
	font-size: 2.1rem;
}
#chkOk, #deleteChk{
	text-align: center;
	width: 200px;
	height: 50px;
	font-size: 1.4rem;
	background: var(--primary-p-50);
	color : white;
	font-weight: bold;
}
#deleteChk{
	background: var(--lecture-6-border);
}
 #chkOk:active, #deleteChk:active{
 	background: var(--primary-p-70);
 }
.section-bottom{
	display:flex;
	justify-content:space-between;
	width: 90%;
	margin: 20px auto;
}